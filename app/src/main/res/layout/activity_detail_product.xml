<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.DetailProductActivity">

    <RelativeLayout
        android:layout_width="@dimen/_330sdp"
        android:layout_height="@dimen/_330sdp"
        android:layout_marginTop="-150sp"
        android:background="@drawable/productdetailbehind_bg"
        android:scaleX="1.3"
        android:scaleY="1.4" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginStart="@dimen/horizontal_padding"
        android:layout_marginTop="@dimen/_22sdp"
        android:src="@drawable/backarrowblack" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_250sdp"
        android:layout_above="@+id/relative"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_25sdp"
        android:src="@drawable/lime" />

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_350sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/detailproduct_bg"
        android:padding="@dimen/horizontal_padding">

        <RelativeLayout
            android:id="@+id/price_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/doller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/doller"
                android:textColor="#28B446"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/doller"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/_0_0"
                android:textColor="#28B446"
                android:textSize="@dimen/_15sdp" />

            <ImageView
                android:id="@+id/like"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/heart" />
        </RelativeLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price_row"
            android:fontFamily="@font/poppins_semibold"
            android:text="Organic Lemons"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:fontFamily="@font/poppins_medium"
            android:text="1.50 lbs"
            android:textColor="@color/grey"
            android:textSize="@dimen/_12sdp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quantity"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="4.5"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />

            <com.idlestar.ratingstar.RatingStarView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:background="@null"
                android:clickable="false"
                app:rsv_rating="4"
                app:rsv_starBackgroundColor="@color/white"
                app:rsv_starForegroundColor="#FFC107"
                app:rsv_starMargin="@dimen/_5sdp"
                app:rsv_starNum="5"
                app:rsv_starThickness="0.5"
                app:rsv_strokeColor="#FFC107" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="(89 reviews)"
                android:textColor="@color/grey"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_marginVertical="@dimen/_10sdp"
            android:fontFamily="@font/poppins"
            android:text="Organic Mountain works as a seller for many organic growers of organic lemons. Organic lemons are easy to spot in your produce aisle. They are just like regular lemons, but they will usually have a few more scars on the outside of the lemon skin. Organic lemons are considered to be the world's finest lemon for juicing"
            android:textColor="@color/grey"
            android:textSize="@dimen/_10ssp" />

        <RelativeLayout
            android:id="@+id/number_of_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/description"
            android:background="@drawable/aboutme_edittext_bg"
            android:paddingHorizontal="@dimen/horizontal_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/poppins_medium"
                android:text="Quantity"
                android:textColor="@color/grey"
                android:textSize="@dimen/_12ssp" />


            <LinearLayout
                android:id="@+id/item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/minus"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:importantForAccessibility="no"
                    android:src="@drawable/minus" />

                <TextView
                    android:id="@+id/quantity_of_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp" />

                <ImageView
                    android:id="@+id/plus"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/plus" />
            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add_address_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/horizontal_padding"
        android:background="@drawable/button"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins_semibold"
            android:text="Add to cart"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/horizontal_padding"
            android:src="@drawable/shop" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/remove_from_cart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/horizontal_padding"
        android:background="@drawable/button"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins_semibold"
            android:text="Product already in cart"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />
    </RelativeLayout>

</RelativeLayout>